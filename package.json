    "reflect-metadata": "^0.1.13",
    "regenerator-runtime": "^0.13.9",
    "url-parse": "^1.5.3",
    "uuid": "^8.3.2"
  },
  "devEngines": {
    "node": ">=14.x",
    "npm": ">=7.x"
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ],
    "singleQuote": false
  }
}
